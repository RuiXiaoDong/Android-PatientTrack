<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$reportFragment">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map Tracking"
        android:id="@+id/button_tracking_map"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:background="#ff1f75ff"
        android:textStyle="bold|normal|italic"
        android:height="60dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accomplishment Rate Tacking"
        android:id="@+id/button_tracking_accomplishment"
        android:textColor="#ffffff"
        android:background="#ff1f75ff"
        android:textStyle="bold|normal|italic"
        android:height="60dp"
        android:layout_below="@+id/button_tracking_map"
        android:layout_toRightOf="@+id/section_label"
        android:layout_alignRight="@+id/button_tracking_map"
        android:layout_alignEnd="@+id/button_tracking_map"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment Tacking"
        android:id="@+id/button_tracking_appointment"
        android:textColor="#ffffff"
        android:background="#ff1f75ff"
        android:textStyle="bold|normal|italic"
        android:height="60dp"
        android:layout_below="@+id/button_tracking_accomplishment"
        android:layout_toRightOf="@+id/section_label"
        android:layout_alignRight="@+id/button_tracking_map"
        android:layout_alignEnd="@+id/button_tracking_map"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output GPS Data"
        android:id="@+id/button_rawdata_gps"
        android:textColor="#ffffff"
        android:background="#ff1f75ff"
        android:textStyle="bold|normal|italic"
        android:height="60dp"
        android:layout_below="@+id/button_tracking_appointment"
        android:layout_toRightOf="@+id/section_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TIME TO TRACK PATIENT"
        android:textColor="@color/blue"
        android:id="@+id/textView8"
        android:layout_margin="25dp"
        android:paddingRight="75dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the time to verify if the patient is next to his/her phone"
        android:paddingLeft="10dp"
        android:textSize="18dp"
        android:id="@+id/textView4"
        android:layout_above="@+id/mySwitch"
        android:layout_alignParentLeft="true"
        android:layout_margin="25dp"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:id="@+id/editText"
        android:inputType="number"
        android:visibility="invisible"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the time"
        android:id="@+id/button"
        android:onClick="callOnOff"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:text="Play with the Switch"
        android:gravity="center_vertical|center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/switchStatus"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/button"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:visibility="invisible"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:textSize="34dp"
        android:text="00"
        android:textColor="@color/actionbar_opacity"
        android:paddingLeft="5dp"
        android:background="@drawable/border_locked"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView"
        android:layout_below="@+id/mySwitch"
        android:layout_toLeftOf="@+id/mySwitch"
        android:layout_toStartOf="@+id/mySwitch"
        android:layout_marginTop="66dp" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:textSize="34dp"
        android:text="00"
        android:textColor="@color/actionbar_opacity"
        android:background="@drawable/border_locked"
        android:paddingLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:textSize="34dp"
        android:text="02"
        android:textColor="@color/actionbar_opacity"
        android:paddingLeft="5dp"
        android:background="@drawable/border_locked"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/mySwitch"
        android:layout_toEndOf="@+id/mySwitch" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:textSize="25dp"
        android:text="ss"
        android:textColor="@color/blue"
        android:paddingLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:textSize="25dp"
        android:text="mm"
        android:textColor="@color/blue"
        android:paddingLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:textSize="25dp"
        android:text="hh"
        android:textColor="@color/blue"
        android:paddingLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/mySwitch"
        android:layout_toStartOf="@+id/mySwitch" />
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Save changes"
        android:textColor="@color/white"
        android:background="@drawable/shadow"
        android:id="@+id/button_onsubmit"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

</RelativeLayout>
